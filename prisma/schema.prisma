generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma-app/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String        @id @default(cuid())
  did             String        @unique
  handle          String?
  created_at      DateTime      @default(now())
  updated_at      DateTime      @updatedAt
  listings        Listing[]
  preferred_areas AreasOnUser[]

  @@map("users")
}

model Listing {
  id          String        @id @default(cuid())
  uri         String
  title       String
  description String?
  status      ListingStatus @default(ACTIVE)
  is_free     Boolean
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  expires_at  DateTime?
  user        User          @relation(fields: [userId], references: [id])
  userId      String

  area   Area @relation(fields: [areaId], references: [id])
  areaId Int  @unique

  category   Category? @relation(fields: [categoryId], references: [id])
  categoryId Int?      @unique

  @@map("listings")
}

model Category {
  id          Int     @id @default(autoincrement())
  name        String
  description String?

  listing Listing?

  @@map("categories")
}

model Image {
  id          String   @id @default(cuid())
  image_url   String
  alt_text    String
  is_primary  Boolean
  uploaded_at DateTime @default(now())

  @@map("images")
}

model City {
  id       Int    @id @default(autoincrement())
  name     String
  province String
  areas    Area[]

  @@map("cities")
}

model Area {
  id                   Int           @id @default(autoincrement())
  name                 String
  slug                 String
  level                Int           @default(1)
  parent_area_id       Int?
  listing              Listing?
  city                 City?         @relation(fields: [city_id], references: [id])
  city_id              Int?
  preferred_area_users AreasOnUser[]

  @@map("areas")
}

model AreasOnUser {
  user    User   @relation(fields: [user_id], references: [id])
  user_id String

  area    Area @relation(fields: [area_id], references: [id])
  area_id Int

  created_at DateTime @default(now())

  @@id([user_id, area_id])
  @@map("areas_on_users")
}

model Session {
  key     String @unique
  session String

  @@map("sessions")
}

model State {
  key   String @unique
  state String

  @@map("states")
}

enum ListingStatus {
  ACTIVE
  CLAIMED
  UNAVAILABLE
  DELETED
}
