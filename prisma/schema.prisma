generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/@prisma-app/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String          @id @default(cuid())
  did             String          @unique
  handle          String?
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt
  listings        Listing[]
  preferred_areas PreferredArea[]
}

model Listing {
  id          String        @id @default(cuid())
  uri         String
  title       String
  description String?
  status      ListingStatus @default(ACTIVE)
  is_free     Boolean
  created_at  DateTime      @default(now())
  updated_at  DateTime      @updatedAt
  expires_at  DateTime?
  user        User          @relation(fields: [userId], references: [id])
  userId      String
  category    Category?
}

model Category {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  listing     Listing? @relation(fields: [listingId], references: [id])
  listingId   String?  @unique
}

model Image {
  id          String   @id @default(cuid())
  image_url   String
  alt_text    String
  is_primary  Boolean
  uploaded_at DateTime @default(now())
}

model PreferredArea {
  id     Int     @id @default(autoincrement())
  name   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Session {
  key     String @unique
  session String

  @@map("sessions")
}

model State {
  key   String @unique
  state String

  @@map("states")
}

enum ListingStatus {
  ACTIVE
  CLAIMED
  UNAVAILABLE
  DELETED
}
